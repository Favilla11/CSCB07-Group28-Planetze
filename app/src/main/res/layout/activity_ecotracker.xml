<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="vertical">

    <!-- Activity Type Spinner -->
    <Spinner
        android:id="@+id/spinner_activity_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/activity_types" />

    <!-- Transportation Type Spinner -->
    <Spinner
        android:id="@+id/spinner_transportation_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/transportation_types" />

    <!-- Transportation Type Spinner -->
    <Spinner
        android:id="@+id/spinner_food_consumption_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/food_consumption_types" />

    <!-- Transportation Type Spinner -->
    <Spinner
        android:id="@+id/spinner_consumption_and_shopping_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/consumption_and_shopping_types" />

    <!-- Energy Bill Type Spinner -->
    <Spinner
        android:id="@+id/spinner_energy_bill_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/energy_bill_types" />

    <!-- Personal Vehicle Section -->
    <Spinner
        android:id="@+id/spinner_personal_vehicle_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/personal_vehicle_types"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_distance_driven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter distance driven (km)"
        android:inputType="numberDecimal"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_number_of_clothing_items_purchased"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number of clothing items purchased"
        android:inputType="numberDecimal"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_number_of_devices_purchased"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number of devices purchased"
        android:inputType="numberDecimal"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_number_of_the_purchases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number of the purchases"
        android:inputType="numberDecimal"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_energy_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter energy_bill($)"
        android:inputType="numberDecimal"
        android:visibility="gone" />

    <!-- Public Transport Section -->
    <Spinner
        android:id="@+id/spinner_public_vehicle_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/public_vehicle_types"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_time_public_transport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter time spent on public transport (hours)"
        android:inputType="numberDecimal"
        android:visibility="gone" />

    <!-- Cycling/Walking Section -->
    <EditText
        android:id="@+id/edit_distance_cycled_walked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter distance cycled or walked (km)"
        android:inputType="numberDecimal"
        android:visibility="gone" />

    <!-- Flights Section -->
    <Spinner
        android:id="@+id/spinner_flight_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/flight_types"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_flights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number of flights"
        android:inputType="number"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_number_of_servings_consumed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number_of_servings_consumed"
        android:inputType="numberDecimal"
        android:visibility="gone" />

    <!-- Buttons -->
    <Button
        android:id="@+id/btn_calculate_emissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Emissions" />

    <Button
        android:id="@+id/btn_clear_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear All" />

    <!-- Total Emissions Text -->
    <TextView
        android:id="@+id/txt_total_emissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total CO2 Emissions: 0 kg"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="16dp" />

    <!-- Part Emissions Text -->
    <TextView
        android:id="@+id/txt_part_emissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driving CO2 Emissions:                       0.00 kg
			      PublicTransport CO2 Emissions:          0.00 kg
			      CyclingWalking CO2 Emissions:           0.00 kg
			      Flights CO2 Emissions:                        0.00 kg
			      Beef Consume CO2 Emissions:            0.00 kg
			      Pork Consume CO2 Emissions:            0.00 kg
			      Chicken Consume CO2 Emissions:       0.00 kg
			      Fish Consume CO2 Emissions:             0.00 kg
			      Plant-based Consume CO2 Emissions: 0.00 kg
			      Buy New Clothes CO2 Emissions:        0.00 kg
			      Buy Electronics CO2 Emissions:           0.00 kg
			      Other Purchases CO2 Emissions:         0.00 kg
			      Energy Bills CO2 Emissions:                0.00 kg
			     "
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginTop="16dp" />

</LinearLayout>


